<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login/Signup - ToughTreads</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
            text-decoration: none;
            list-style: none;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: linear-gradient(135deg, #222831, #393e46);
        }

        .container {
            position: relative;
            width: 850px;
            height: 550px;
            background: #fff;
            margin: 20px;
            border-radius: 30px;
            box-shadow: 0 0 30px rgba(0, 0, 0, .5);
            overflow: hidden;
        }

        .container h1 {
            font-size: 36px;
            color: #ffd166;
            text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.3);
            margin: -10px 0;
        }

        .container p {
            font-size: 14.5px;
            color: #e0e0e0;
            margin: 15px 0;
        }

        .error {
            color: #FF4444;
            font-size: 14px;
            margin-top: 10px;
        }

        form { width: 100%; }

        .form-box {
            position: absolute;
            top: 0;
            width: 50%;
            height: 100%;
            background: rgba(34, 40, 49, 0.7);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #e0e0e0;
            text-align: center;
            padding: 40px;
            transition: all 0.5s ease-in-out;
            opacity: 1;
            pointer-events: auto;
        }

        .form-box.login {
            right: 0;
            visibility: visible;
            z-index: 2;
        }

        .container.active .form-box.login {
            right: 50%;
            opacity: 0;
            visibility: hidden;
            z-index: 1;
            pointer-events: none;
        }

        .form-box.register {
            right: 50%;
            opacity: 0;
            visibility: hidden;
            z-index: 1;
        }

        .container.active .form-box.register {
            left: 0;
            opacity: 1;
            visibility: visible;
            z-index: 2;
            pointer-events: auto;
        }

        .input-box {
            position: relative;
            margin: 20px 0;
            width: 100%;
        }

        .input-box input {
            width: 100%;
            padding: 13px 50px 13px 20px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            border: 1px solid #4a4e69;
            outline: none;
            font-size: 16px;
            color: #e0e0e0;
            font-weight: 500;
        }

        .input-box input::placeholder {
            color: #bbb;
            font-weight: 400;
        }
        
        .input-box i {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 20px;
            color: #ffd166;
        }

        .btn {
            width: 100%;
            height: 48px;
            background: linear-gradient(90deg, #4a4e69, #5d677a);
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, .3);
            border: none;
            cursor: pointer;
            font-size: 16px;
            color: #ffd166;
            font-weight: 600;
            text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.3);
        }

        .btn:hover {
            background: linear-gradient(90deg, #3a3e49, #4d576a);
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(74, 78, 105, 0.7);
        }

        .toggle-box {
            position: absolute;
            width: 100%;
            height: 100%;
        }

        .toggle-box::before {
            content: '';
            position: absolute;
            left: -250%;
            width: 300%;
            height: 100%;
            background: linear-gradient(90deg, #4a4e69, #5d677a);
            border-radius: 150px;
            z-index: 2;
            transition: 1.8s ease-in-out;
        }

        .container.active .toggle-box::before { left: 50%; }

        .toggle-panel {
            position: absolute;
            width: 50%;
            height: 100%;
            color: #e0e0e0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 3;
            transition: .4s ease-in-out;
        }

        .toggle-panel.toggle-left { 
            left: 0;
            transition-delay: 1.2s; 
        }
        .container.active .toggle-panel.toggle-left {
            left: -50%;
            transition-delay: .6s;
        }

        .toggle-panel.toggle-right { 
            right: -50%;
            transition-delay: .6s;
        }
        .container.active .toggle-panel.toggle-right {
            right: 0;
            transition-delay: 1.2s;
        }

        .toggle-panel p { margin-bottom: 20px; }

        .toggle-panel .btn {
            width: 160px;
            height: 46px;
            background: transparent;
            border: 2px solid #ffd166;
            box-shadow: none;
            color: #ffd166;
        }

        .toggle-panel .btn:hover {
            background: rgba(255, 209, 102, 0.2);
            transform: scale(1.05);
        }

        @media screen and (max-width: 650px) {
            .container { height: calc(100vh - 40px); }
            .form-box { bottom: 0; width: 100%; height: 70%; }
            .container.active .form-box.login { bottom: 30%; opacity: 0; visibility: hidden; }
            .form-box.register { bottom: -70%; opacity: 0; visibility: hidden; }
            .container.active .form-box.register { bottom: 0; opacity: 1; visibility: visible; }
            .toggle-box::before { left: 0; top: -270%; width: 100%; height: 300%; border-radius: 20vw; }
            .container.active .toggle-box::before { left: 0; top: 70%; }
            .container.active .toggle-panel.toggle-left { left: 0; top: -30%; }
            .toggle-panel { width: 100%; height: 30%; }
            .toggle-panel.toggle-left { top: 0; }
            .toggle-panel.toggle-right { right: 0; bottom: -30%; }
            .container.active .toggle-panel.toggle-right { bottom: 0; }
        }

        @media screen and (max-width: 400px) {
            .form-box { padding: 20px; }
            .toggle-panel h1 { font-size: 30px; }
        }
    </style>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <div class="container">
        <div class="form-box login">
            <form action="/login" method="POST">
                <h1>Login</h1>
                <div class="input-box">
                    <input type="text" name="username" placeholder="Username" required>
                    <i class='bx bxs-user'></i>
                </div>
                <div class="input-box">
                    <input type="password" name="password" placeholder="Password" required>
                    <i class='bx bxs-lock-alt'></i>
                </div>
                <% if (error) { %>
                    <div class="error"><%= error %></div>
                <% } %>
                <button type="submit" class="btn">Login</button>
            </form>
        </div>

        <div class="form-box register">
            <form action="/login" method="POST">
                <h1>Registration</h1>
                <input type="hidden" name="action" value="register">
                <div class="input-box">
                    <input type="text" name="username" placeholder="Username" required>
                    <i class='bx bxs-user'></i>
                </div>
                <div class="input-box">
                    <input type="email" name="email" placeholder="Email" required>
                    <i class='bx bxs-envelope'></i>
                </div>
                <div class="input-box">
                    <input type="password" name="password" placeholder="Password" required>
                    <i class='bx bxs-lock-alt'></i>
                </div>
                <% if (error) { %>
                    <div class="error"><%= error %></div>
                <% } %>
                <button type="submit" class="btn">Register</button>
            </form>
        </div>

        <div class="toggle-box">
            <div class="toggle-panel toggle-left">
                <h1>Hello, Welcome!</h1>
                <p>Don't have an account?</p>
                <button class="btn register-btn">Register</button>
            </div>
            <div class="toggle-panel toggle-right">
                <h1>Welcome Back!</h1>
                <p>Already have an account?</p>
                <button class="btn login-btn">Login</button>
            </div>
        </div>
    </div>

    <script>
        const container = document.querySelector('.container');
        const registerBtn = document.querySelector('.register-btn');
        const loginBtn = document.querySelector('.login-btn');

        registerBtn.addEventListener('click', () => {
            container.classList.add('active');
        });

        loginBtn.addEventListener('click', () => {
            container.classList.remove('active');
        });
    </script>
</body>
</html>