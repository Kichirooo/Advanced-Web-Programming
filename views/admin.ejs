<!DOCTYPE html>
<html>
  <head>
    <title>Admin Dashboard - GEDORCA</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Arial&display=swap");

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Arial", sans-serif;
        margin: 0;
        background: linear-gradient(135deg, #222831, #393e46);
        color: #e0e0e0;
        line-height: 1.6;
      }

      header {
        background: linear-gradient(90deg, #1a252f, #2c3e50);
        color: #fff;
        padding: 15px 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.7);
        position: sticky;
        top: 0;
        z-index: 1000;
      }

      .nav-links {
        display: flex;
        align-items: center;
        gap: 15px;
      }

      .logo {
        font-size: 28px;
        font-weight: bold;
        color: #ffd166;
        text-shadow: 2px 2px 6px rgba(255, 209, 102, 0.7);
      }

      header a {
        color: #ffd166;
        text-decoration: none;
        margin-left: 15px;
        font-weight: 600;
        transition: color 0.3s ease, transform 0.3s ease;
      }

      header a:hover {
        color: #ffeb3b;
        transform: scale(1.1);
      }

      .container {
        padding: 40px;
        max-width: 1200px;
        margin: 0 auto;
      }

      h2 {
        margin-bottom: 20px;
        color: #ffd166;
        text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.3);
      }

      table {
        border-collapse: collapse;
        width: 100%;
        background: rgba(34, 40, 49, 0.7);
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
        margin-bottom: 30px;
      }

      th,
      td {
        border: 1px solid rgba(255, 209, 102, 0.2);
        padding: 12px;
        text-align: center;
      }

      th {
        background: linear-gradient(90deg, #4a4e69, #5d677a);
        color: #ffd166;
        font-weight: 700;
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.5);
      }

      td {
        vertical-align: middle;
      }

      .form-group {
        margin: 20px 0;
      }

      .form-group label {
        margin-right: 10px;
      }

      .form-group input[type="number"] {
        padding: 10px;
        border-radius: 25px;
        border: 1px solid #4a4e69;
        background: rgba(255, 255, 255, 0.1);
        color: #fff;
        outline: none;
        width: 100px;
      }

      button {
        background: linear-gradient(90deg, #4a4e69, #5d677a);
        color: #ffd166;
        border: none;
        padding: 12px 25px;
        border-radius: 25px;
        cursor: pointer;
        transition: all 0.4s ease;
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.3);
        margin-right: 10px;
      }

      button:hover {
        background: linear-gradient(90deg, #3a3e49, #4d576a);
        transform: scale(1.1);
        box-shadow: 0 8px 25px rgba(74, 78, 105, 0.8);
      }

      .delete-btn {
        background: #f44336;
        color: white;
        padding: 5px 10px;
        border: none;
        border-radius: 15px;
        cursor: pointer;
        transition: background 0.3s ease, transform 0.3s ease;
      }

      .delete-btn:hover {
        background: #d32f2f;
        transform: scale(1.05);
        box-shadow: 0 3px 10px rgba(244, 67, 54, 0.5);
      }

      @media (max-width: 768px) {
        .container {
          padding: 20px;
        }
        table {
          font-size: 0.9em;
        }
        th,
        td {
          padding: 8px;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <div class="logo">GEDORCA Admin</div>
      <div class="nav-links">
        <a href="/" style="color: #ffd166; text-decoration: none">Back to Home</a>
      </div>
      <span>Selamat datang, <%= user.username %> | <a href="/logout">Logout</a></span>
    </header>
    <div class="container">
      <h2>Daftar Produk</h2>
      <table>
        <thead>
          <tr>
            <th>Nama</th>
            <th>Harga</th>
            <th>Stok</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (products && products.length > 0) { %> <% products.forEach(product => { %>
          <tr>
            <td><%= product.name %></td>
            <td>Rp <%= product.price %></td>
            <td>
              <form action="/admin/edit-stock/<%= product.id %>" method="POST" class="form-group">
                <input type="number" name="stock" value="<%= product.stock %>" min="0" required />
                <button type="submit">Update Stok</button>
              </form>
            </td>
            <td>
              <!-- Tambahkan fungsi hapus produk jika diperlukan -->
            </td>
          </tr>
          <% }); %> <% } else { %>
          <tr>
            <td colspan="4">Tidak ada produk.</td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <h2>Daftar Pengguna</h2>
      <table>
        <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (users && users.length > 0) { %> <% users.forEach(userItem => { %>
          <tr>
            <td><%= userItem.username %></td>
            <td><%= userItem.email %></td>
            <td><%= userItem.role %></td>
            <td>
              <% if (userItem.id !== user.id) { %>
              <form action="/admin/delete-user/<%= userItem.id %>" method="POST" onsubmit="return confirm('Yakin ingin menghapus pengguna ini?');">
                <button type="submit" class="delete-btn">Hapus</button>
              </form>
              <% } else { %> - <% } %>
            </td>
          </tr>
          <% }); %> <% } else { %>
          <tr>
            <td colspan="4">Tidak ada pengguna.</td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <h2>Semua History Pembelian</h2>
      <table>
        <thead>
          <tr>
            <th>Username</th>
            <th>Produk</th>
            <th>Jumlah</th>
            <th>Tanggal Pembelian</th>
            <th>Ukuran</th>
            <th>Status</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (allPurchases && allPurchases.length > 0) { %> <% allPurchases.forEach(purchase => { %>
          <tr>
            <td><%= purchase.username %></td>
            <td><%= purchase.name %></td>
            <td><%= purchase.quantity %></td>
            <td><%= new Date(purchase.purchase_date).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' }) %></td>
            <td><%= purchase.size %></td>
            <td><%= purchase.cancelled ? 'Dibatalkan' : 'Aktif' %></td>
            <td>
              <% if (!purchase.cancelled) { %>
              <form action="/admin/delete-purchase/<%= purchase.id %>" method="POST" onsubmit="return confirm('Yakin ingin menghapus pembelian ini?');">
                <button type="submit" class="delete-btn">Hapus</button>
              </form>
              <% } else { %> - <% } %>
            </td>
          </tr>
          <% }); %> <% } else { %>
          <tr>
            <td colspan="7">Tidak ada history pembelian.</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
