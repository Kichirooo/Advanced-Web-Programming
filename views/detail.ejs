  <div class="recommendations">
    <h2>Rekomendasi Serupa</h2>
    <div class="rec-list">
      <% if (recommendations && recommendations.length > 0) { %>
        <% const displayedRecommendations = recommendations.slice(0, 3); %>
        <% displayedRecommendations.forEach(rec => { %>
          <% if (rec.id !== product.id) { %>
            <% let recInitialImage = '';
               let recHoverImage = '';
               if (rec.name === 'Sepatu Safety Tali Pendek') {
                 recInitialImage = '/images/Sepatu Safety Tali Pendek/cat_boot_tali_pendek.jpeg';
                 recHoverImage = recInitialImage; // Tanpa hover
               } else if (rec.name === 'Sepatu Safety Leather Tali Coklat') {
                 recInitialImage = '/images/Sepatu Safety Leather Tali Coklat/cat_boot_leather_coklat_depan.jpeg';
                 recHoverImage = '/images/Sepatu Safety Leather Tali Coklat/cat_boot_leather_coklat_kanan.jpeg';
               } else if (rec.name === 'Sepatu Safety Leather Tali Hitam') {
                 recInitialImage = '/images/Sepatu Safety Leather Tali Hitam/cat_boot_leather_hitam_depan.jpeg';
                 recHoverImage = '/images/Sepatu Safety Leather Tali Hitam/cat_boot_leather_hitam_kanan.jpeg';
               } else if (rec.name === 'Sepatu Safety Resleting Coklat') {
                 recInitialImage = '/images/Sepatu Safety Resleting Coklat/cat_boot_sleting_coklat.jpeg';
                 recHoverImage = '/images/sepatu Safety Resleting Coklat/cat_boot_sleting_coklat+kaosKaki.jpeg';
               } else if (rec.name === 'Sepatu Safety Resleting Hitam') {
                 recInitialImage = '/images/Sepatu Safety Resleting Hitam/cat_boot_sleting_hitam_atas.jpeg';
                 recHoverImage = '/images/Sepatu Safety Resleting Hitam/cat_boot_sleting_hitam.jpeg';
               } else if (rec.name === 'Sepatu Safety Tali Coklat') {
                 recInitialImage = '/images/Sepatu Safety Tali Coklat/cat_boot_tali_coklat_depan.jpeg';
                 recHoverImage = '/images/Sepatu Safety Tali Coklat/cat_boot_tali_coklat_kanan.jpeg';
               } else if (rec.name === 'Sepatu Safety Tali Hitam') {
                 recInitialImage = '/images/Sepatu Safety Tali Hitam/cat_boot_tali_hitam_atas.jpeg';
                 recHoverImage = '/images/Sepatu Safety Tali Hitam/cat_boot_tali_hitam_kiri.jpeg';
               } else {
                 recInitialImage = 'https://via.placeholder.com/150';
                 recHoverImage = recInitialImage;
               } %>
