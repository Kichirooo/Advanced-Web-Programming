<!DOCTYPE html>
<html>
<head>
  <title><%= product.name %> - GEDORCA</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Arial&display=swap');

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Arial', sans-serif;
      margin: 0;
      background: linear-gradient(135deg, #222831, #393e46);
      color: #e0e0e0;
      line-height: 1.6;
    }

    header {
      background: linear-gradient(90deg, #1a252f, #2c3e50);
      color: #fff;
      padding: 15px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.7);
      position: sticky;
      top: 0;
      z-index: 1000;
      transition: box-shadow 0.3s ease;
    }

    header:hover {
      box-shadow: 0 6px 30px rgba(0, 0, 0, 0.9);
    }

    .logo {
      font-size: 28px;
      font-weight: bold;
      color: #ffd166;
      text-shadow: 2px 2px 6px rgba(255, 209, 102, 0.7);
    }

    header input {
      padding: 10px;
      width: 250px;
      border: none;
      border-radius: 25px;
      outline: none;
      background: rgba(255, 255, 255, 0.1);
      color: #fff;
      transition: box-shadow 0.3s ease;
    }

    header input:focus {
      box-shadow: 0 0 10px rgba(255, 209, 102, 0.5);
    }

    header a {
      color: #ffd166;
      text-decoration: none;
      margin-left: 15px;
      font-weight: 600;
      transition: color 0.3s ease, transform 0.3s ease;
    }

    header a:hover {
      color: #ffeb3b;
      transform: scale(1.1);
    }

    .detail {
      padding: 40px;
      display: flex;
      gap: 30px;
      max-width: 1200px;
      margin: 0 auto;
    }

    .image-section {
      flex: 1;
      position: relative;
    }

    .main-img {
      width: 100%;
      height: 450px;
      object-fit: cover;
      border-radius: 15px;
      border: 5px solid #4a4e69;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
      transition: transform 0.4s ease;
    }

    .main-img:hover {
      transform: scale(1.05);
    }

    .info-section {
      flex: 2;
    }

    .info-section h1 {
      margin-bottom: 20px;
      font-size: 2em;
    }

    .info-section p {
      margin: 10px 0;
    }

    .rating {
      color: #ffd166;
      font-size: 1.1em;
      margin: 15px 0;
      text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.3);
    }

    table {
      border-collapse: collapse;
      margin: 20px 0;
      width: 100%;
      background: rgba(34, 40, 49, 0.7);
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
    }

    th, td {
      border: 1px solid rgba(255, 209, 102, 0.2);
      padding: 12px;
      text-align: center;
    }

    th {
      background: linear-gradient(90deg, #4a4e69, #5d677a);
      color: #ffd166;
      font-weight: 700;
      text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.5);
    }

    button {
      background: linear-gradient(90deg, #4a4e69, #5d677a);
      color: #ffd166;
      border: none;
      padding: 12px 25px;
      border-radius: 25px;
      cursor: pointer;
      transition: all 0.4s ease;
      text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.3);
      margin-right: 10px;
    }

    button:hover {
      background: linear-gradient(90deg, #3a3e49, #4d576a);
      transform: scale(1.1);
      box-shadow: 0 8px 25px rgba(74, 78, 105, 0.8);
    }

    form {
      margin: 20px 0;
      display: flex;
      gap: 10px;
      align-items: center;
    }

    select, input[type="number"] {
      padding: 10px;
      border-radius: 25px;
      border: 1px solid #4a4e69;
      background: rgba(255, 255, 255, 0.1);
      color: #fff;
      outline: none;
    }

    .recommendations {
      margin-top: 50px;
      padding: 0 40px;
    }

    .rec-list {
      display: flex;
      gap: 25px;
      overflow-x: auto;
      padding: 10px 0;
    }

    .rec-item {
      background: rgba(34, 40, 49, 0.7);
      padding: 15px;
      border-radius: 15px;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.5);
      text-align: center;
      transition: transform 0.4s ease, box-shadow 0.4s ease;
      min-width: 200px;
    }

    .rec-item:hover {
      transform: translateY(-10px);
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.7);
    }

    .rec-img {
      width: 150px;
      height: 150px;
      object-fit: cover;
      border-radius: 10px;
      border: 3px solid #ffd166;
    }

    a {
      color: #ffd166;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
      color: #ffeb3b;
    }

    .reviews {
      margin-top: 50px;
      padding: 0 40px;
    }

    .reviews h2 {
      font-size: 1.8em;
      margin-bottom: 15px;
      color: #ffd166;
      text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.3);
    }

    .reviews table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
      background: rgba(34, 40, 49, 0.7);
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
    }

    .reviews th, .reviews td {
      border: 1px solid rgba(255, 209, 102, 0.2);
      padding: 10px;
      text-align: left;
    }

    .reviews th {
      background: linear-gradient(90deg, #4a4e69, #5d677a);
      color: #ffd166;
      font-weight: 700;
      text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.5);
    }

    .add-review {
      display: flex;
      gap: 15px;
    }

    .add-review input {
      flex: 1;
      padding: 10px;
      border: 1px solid #4a4e69;
      border-radius: 25px;
      background: rgba(255, 255, 255, 0.1);
      color: #fff;
      outline: none;
      transition: box-shadow 0.3s ease;
    }

    .add-review input:focus {
      box-shadow: 0 0 10px rgba(255, 209, 102, 0.5);
    }

    .add-review button {
      padding: 10px 20px;
      background: #4CAF50;
      color: white;
      border: none;
      border-radius: 25px;
      cursor: pointer;
      transition: background 0.4s ease, transform 0.4s ease;
    }

    .add-review button:hover {
      background: #45a049;
      transform: scale(1.05);
      box-shadow: 0 5px 15px rgba(76, 175, 80, 0.5);
    }

    .delete-btn {
      background: #f44336;
      color: white;
      padding: 5px 10px;
      border: none;
      border-radius: 15px;
      cursor: pointer;
      transition: background 0.3s ease, transform 0.3s ease;
      margin-left: 10px;
    }

    .delete-btn:hover {
      background: #d32f2f;
      transform: scale(1.05);
      box-shadow: 0 3px 10px rgba(244, 67, 54, 0.5);
    }

    @media (max-width: 768px) {
      .detail {
        flex-direction: column;
      }
      .main-img {
        height: 300px;
      }
      .rec-list {
        flex-direction: column;
        align-items: center;
      }
      .rec-item {
        min-width: 150px;
      }
    }
  </style>
</head>
