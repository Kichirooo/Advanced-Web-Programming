  <div class="reviews">
    <h2>Ulasan Pelanggan</h2>
    <table>
      <thead>
        <tr>
          <th>Ulasan</th>
          <th>Nama</th>
          <th>Tanggal</th>
          <th>Aksi</th> <!-- Kolom baru untuk tombol hapus -->
        </tr>
      </thead>
      <tbody id="reviewsBody">
        <% if (reviews && reviews.length > 0) { %>
          <% reviews.forEach(review => { %>
            <tr>
              <td><%= review.review_text %></td>
              <td><%= review.username %></td>
              <td><%= new Date(review.created_at).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' }) %></td>
              <td>
                <% if (user && (user.username === review.username || user.role === 'admin')) { %>
                  <button class="delete-btn" onclick="deleteReview(<%= review.id %>)">Hapus</button>
                <% } %>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr><td colspan="4">Belum ada ulasan untuk produk ini.</td></tr>
        <% } %>
      </tbody>
    </table>
    <% if (user && user.username) { %>
      <div class="add-review">
        <input type="text" id="newReview" placeholder="Tulis ulasan Anda...">
        <button onclick="addReview()">Tambah Ulasan</button>
      </div>
    <% } else { %>
      <p>Silakan <a href="/login">login</a> untuk menambahkan ulasan.</p>
    <% } %>
  </div>
  <script>
    function addReview() {
      const newReviewInput = document.getElementById('newReview');
      if (newReviewInput.value.trim() === '') {
        alert('Ulasan tidak boleh kosong!');
        return;
      }

      const reviewText = newReviewInput.value;
      const productId = <%= product.id %>;

      fetch('/api/reviews', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ text: reviewText, product_id: productId })
      })
      .then(response => {
        if (!response.ok) {
          throw new Error('Network response was not ok: ' + response.statusText);
        }
        return response.json();
      })
      .then(data => {
        if (data.success) {
          const date = new Date().toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' });
          const username = '<%= user ? user.username : "Anonymous" %>';
          const newRow = document.createElement('tr');
          newRow.innerHTML = `
            <td>${reviewText}</td>
            <td>${username}</td>
            <td>${date}</td>
            <td><button class="delete-btn" onclick="deleteReview(${data.id})">Hapus</button></td>
          `;
          const reviewsBody = document.getElementById('reviewsBody');
          reviewsBody.insertBefore(newRow, reviewsBody.firstChild);
          newReviewInput.value = '';
        } else {
          alert('Gagal menambahkan ulasan: ' + (data.error || 'Coba lagi.'));
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Terjadi kesalahan saat menyimpan ulasan: ' + error.message);
      });
    }

    function deleteReview(reviewId) {
      if (confirm('Apakah Anda yakin ingin menghapus ulasan ini?')) {
        fetch(`/api/reviews/${reviewId}`, {
          method: 'DELETE',
          headers: { 'Content-Type': 'application/json' }
        })
        .then(response => {
          if (!response.ok) {
            throw new Error('Network response was not ok: ' + response.statusText);
          }
          return response.json();
        })
        .then(data => {
          if (data.success) {
            const row = document.querySelector(`button[onclick="deleteReview(${reviewId})"]`).closest('tr');
            row.remove();
            alert('Ulasan berhasil dihapus.');
          } else {
            alert('Gagal menghapus ulasan: ' + (data.error || 'Coba lagi.'));
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Terjadi kesalahan saat menghapus ulasan: ' + error.message);
