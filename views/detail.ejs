              <a href="/product/<%= rec.id %>">
                <img class="rec-img" 
                     src="<%= recInitialImage %>" 
                     <% if (recHoverImage !== recInitialImage) { %> 
                       onmouseover="this.src='<%= recHoverImage %>'" 
                       onmouseout="this.src='<%= recInitialImage %>'" 
                     <% } %>
                     alt="<%= rec.name %>">
                <p><%= rec.name %> - Rp <%= rec.price %></p>
              </a>
            </div>
          <% } %>
        <% }); %>
        <% while (displayedRecommendations.length < 3) { %>
          <div class="rec-item" style="opacity: 0.5;">
            <p>Tidak ada rekomendasi tambahan</p>
          </div>
